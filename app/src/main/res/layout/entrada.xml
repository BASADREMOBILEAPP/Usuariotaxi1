<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageView_imagen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="DescripciÃ³n del contenido de la imagen"
        android:src="@android:drawable/ic_menu_gallery" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingStart="10dp"
        android:paddingBottom="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/MyTextStyle0"
            android:id="@+id/textView_superior"
            android:text="el nobre de juanito"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView_medio"
            style="@style/MyTextStyle0.LargeFont"
            android:text="la direccion de juanito"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView_inferior"
            style="@style/MyTextStyle2"
            android:text="el tiempo de legada"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>